<div id='response'>
  <h2><%= @response.answer %></h2>
  <span id='author'>Created by <%= @response.user.email %></span>
    <%= link_to "Edit Response", [:edit, @discussion, @response] %>
    <%= link_to "Delete Response", [@discussion, @response], method: :delete,
        confirm: "Are you sure you want to delete this response?" %>
</div>
