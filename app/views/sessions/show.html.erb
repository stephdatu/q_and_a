<% title(@session.question, "Sessions") %>

<h2><%= @session.question %></h2>

<%= link_to "Edit Session", edit_session_path(@session) %>
<%= link_to "Delete Session", session_path(@session),
    method: :delete,
    confirm: "Are you sure you want to delete this session?" %>
<%= link_to "New Response", new_session_response_path(@session) %>

<ul id='responses'>
  <% @session.responses.each do |response| %>
    <li>
      #<%= response.id %> -
       <%= link_to response.answer, [@session, response] %>
    </li>
  <% end %>
</ul>
